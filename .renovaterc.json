{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":dependencyDashboard"],
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "merge-commit",
      "matchDepTypes": ["*"],
      "rangeStrategy": "pin",
      "recreateWhen": "always"
    },
    {
      "description": "Pin all GitHub Actions to commit hash",
      "matchDepTypes": ["action"],
      "pinDigests": true,
      "versioning": "docker"
    },
    {
      "description": "Group TFLint related updates",
      "groupName": "tflint",
      "matchPackageNames": ["terraform-linters/tflint"],
      "versioning": "docker",
      "matchDepTypes": ["action-input"],
      "extractVersion": "^v(?<version>.*)$",
      "datasourceTemplate": "github-releases"
    }
  ],
  "platformAutomerge": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}