{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":dependencyDashboard"],
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "merge-commit",
      "matchDepTypes": ["*"],
      "rangeStrategy": "pin",
      "recreateWhen": "always"
    },
    {
      "description": "Pin all GitHub Actions to commit hash",
      "matchDepTypes": ["action"],
      "pinDigests": true,
      "matchPackageNames": ["*"],
      "versioning": "semver",
      "extractVersion": "^v(?<version>.*)$"
    },
    {
      "description": "Group TFLint related updates",
      "groupName": "tflint",
      "matchPackagePatterns": ["^tflint"],
      "versioning": "semver",
      "extractVersion": "^v(?<version>.*)$"
    }
  ],
  "platformAutomerge": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
